<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
@model Dish
<body>

    <div class="text-center">
        <h2>Add A Dish!</h2>
    </div>
    <a href="/">Home</a>
    <form action="/addDish" method="post">
        <div class="form-group">
            <label for="Name"> Name</label>
            <input asp-for="Name">
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label for="Calories">Calories</label>
            <input asp-for="Calories">
            <span asp-validation-for="Calories"></span>
        </div>
        <div class="form-group">
            <label for="Description">Description</label>
            <input asp-for="Description">
            <span asp-validation-for="Description"></span>
        </div>
        <div class="form-group">
            <label for="Tastiness">Tastiness</label>
            <select asp-for="Tastiness">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
            <span asp-validation-for="Tastiness"></span>
        </div>
        <div class="form-group">
            <label for="ChefId"> Chef</label>
            <select asp-for="ChefId">
                @foreach (Chef c in ViewBag.allChefs)
                {
                    <option value="@c.ChefId">@c.FirstName @c.LastName</option>
                }
            </select>
            <span asp-validation-for="Chef"></span>
        </div>
        <input type="submit" value="Add Dish!">
    </form>
</body>
</html>